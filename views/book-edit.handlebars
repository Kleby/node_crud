{{#with book}}
<div class="form-edit__container">
    <form action="/book/update-book" method="post" class="form__container">
    <input type="hidden" name="id" value="{{id}}">
        <h1 class="title">Editar livro</h1>
        <div class="form-group">
            <label for="bookTitle" class="form-label">Título</label>
            <input type="text" name="title" id="bookTitle" class="form-input" value="{{title}}">
        </div>
        <div class="form-group">
            <label for="pages" class="form-label">Quantidade de páginas</label>
            <input type="number" name="pages" id="pages" class="form-input" value="{{pages}}">
        </div>
        <div class="form-group">
            <label for="bookYear" class="form-label">Ano do livro</label>
            <input type="text" name="year" id="bookYear" class="form-input" value="{{year}}">
        </div>
        <button type="submit" class="btn-submit">Salvar</button>
    </form>
</div>

{{/with}}