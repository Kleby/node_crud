<form action="/book-register/insert" method="post" 
    class="form__container">
    <h1 class="title">Cadastrar um livro</h1>
    <div class="form-group">
        <label for="bookTitle" class="form-label">Título</label>
        <input type="text" name="title" id="bookTitle" class="form-input" placeholder="História">
    </div>
    <div class="form-group">
        <label for="pages" class="form-label">Quantidade de páginas</label>
        <input type="number" name="pages" id="pages" class="form-input" placeholder="340">
    </div>
    <div class="form-group">
        <label for="bookYear" class="form-label">Ano do livro</label>
        <input type="text" name="year" id="bookYear" class="form-input" placeholder="2020">
    </div>
    <button type="submit" class="btn-submit">Cadastrar</button>
</form>